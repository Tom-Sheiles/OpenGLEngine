{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "CL Build",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}",
                "/link",
                "/SUBSYSTEM:WINDOWS",
                "user32.lib",
                "gdi32.lib",
                "kernel32.lib",
                "opengl32.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: cl.exe",
        },
    ]
}